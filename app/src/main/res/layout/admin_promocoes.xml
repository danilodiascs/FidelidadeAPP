<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Login"
    android:id="@+id/fra">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_marginTop="0dp"
        android:id="@+id/imageView1"
        android:layout_gravity="top"
        android:src="@drawable/barracima"
        android:background="#ff0043ff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Promoções"
        android:layout_marginLeft="70dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:id="@+id/textView"
        android:layout_gravity="left|top" />


    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="300dp"
        android:id="@+id/botao_plus"
        android:background="@drawable/plusicon"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ScrollView
        android:layout_marginTop="140dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Promoção1"
                android:id="@+id/textView12"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:textColor="#4040ff"/>

            <ImageButton
                android:layout_marginLeft="300dp"
                android:layout_marginTop="-30dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignBottom="@+id/botao_plus"
                android:layout_toLeftOf="@+id/botao_plus"
                android:layout_toStartOf="@+id/botao_plus"
                android:background="@drawable/remove"
                android:adjustViewBounds="false" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="0dp"
                android:id="@+id/imageView2"
                android:layout_gravity="top"
                android:background="#ff0043ff" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Promoção2"
                android:id="@+id/textView3"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:textColor="#4040ff"/>

            <ImageButton
                android:layout_marginLeft="300dp"
                android:layout_marginTop="-30dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignBottom="@+id/botao_plus"
                android:layout_toLeftOf="@+id/botao_plus"
                android:layout_toStartOf="@+id/botao_plus"
                android:background="@drawable/remove"
                android:adjustViewBounds="false" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="0dp"
                android:id="@+id/imageView3"
                android:layout_gravity="top"
                android:background="#ff0043ff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Promoção3"
                android:id="@+id/textView2"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:textColor="#4040ff"/>

            <ImageButton
                android:layout_marginLeft="300dp"
                android:layout_marginTop="-30dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignBottom="@+id/botao_plus"
                android:layout_toLeftOf="@+id/botao_plus"
                android:layout_toStartOf="@+id/botao_plus"
                android:background="@drawable/remove"
                android:adjustViewBounds="false" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="0dp"
                android:id="@+id/imageView4"
                android:layout_gravity="top"
                android:background="#ff0043ff" />

        </LinearLayout>

    </ScrollView>




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <include layout="@layout/menu_inferior" />

    </LinearLayout>

</FrameLayout>
