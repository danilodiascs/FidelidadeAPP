<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Login"
    android:id="@+id/fra">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_marginTop="0dp"
        android:id="@+id/imageView1"
        android:layout_gravity="top"
        android:src="@drawable/barracima"
        android:background="#ff0043ff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Use Seus Pontos!"
        android:layout_marginLeft="70dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:id="@+id/textView"
        android:layout_gravity="left|top" />

    <ScrollView
        android:layout_marginTop="50dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/imageView7"
                    android:src="@drawable/icone1"
                    android:layout_gravity="top"
                    android:background="#ff0043ff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="ProdutoA - x pontos"
                    android:id="@+id/textView9"
                    android:layout_gravity="left|top"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#4040ff"/>

            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginTop="-5dp"
                android:layout_marginLeft="60dp"
                android:id="@+id/imageView0"
                android:layout_gravity="top"
                android:background="#ff0043ff" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/imageView8"
                    android:src="@drawable/icone1"
                    android:layout_gravity="top"
                    android:background="#ff0043ff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="ProdutoA - x pontos"
                    android:id="@+id/textView5"
                    android:layout_gravity="left|top"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#4040ff"/>

            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginTop="-5dp"
                android:layout_marginLeft="60dp"
                android:id="@+id/imageView6"
                android:layout_gravity="top"
                android:background="#ff0043ff" />



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/imageView5"
                    android:src="@drawable/icone1"
                    android:layout_gravity="top"
                    android:background="#ff0043ff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="ProdutoA - x pontos"
                    android:id="@+id/textView2"
                    android:layout_gravity="left|top"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#4040ff"/>

            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginTop="-5dp"
                android:layout_marginLeft="60dp"
                android:id="@+id/imageView2"
                android:layout_gravity="top"
                android:background="#ff0043ff" />



        </LinearLayout>

    </ScrollView>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <include layout="@layout/menu_inferior_cliente1" />

    </LinearLayout>

</FrameLayout>
